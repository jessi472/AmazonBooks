@inherits LayoutComponentBase

<div class="bg-info text-white p-2">

    <div class="container-fluid">

        <div class="row">

            <div class="col">

                <span class="navbar-brand m-lg-2">Amazon Books Administration</span>

            </div>

            <div class="col-2 text-right">
                <a class="btn btm-sm btn-primary" href="/account/logout">Log Out</a>
            </div>

        </div>

    </div>

</div>

<div class="container-fluid">

    <div class="row p-2">

        <div class="col-3 ">
            
            <div class="d-grid gap-2">
                <NavLink class="display-6" href="/admin/books"
                         ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">
                    Books
                </NavLink>

                <NavLink class="display-6" href="/admin/orders"
                         ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">
                    Orders
                </NavLink>

                <div class="toast show">
                    <div class="toast-header">
                        Administration
                        
                    </div>
                    <div class="toast-body">
                        Click Books to see all the books in the database.
                        Click Orders to see all orders, shipped and unshipped.
                    </div>
                </div>


            </div>


        </div>

        <div class="col bg-body">
           
            @Body

        </div>

    </div>

</div>